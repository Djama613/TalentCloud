{# =============================================================================

    Talent Cloud
    Manager: Profile - About Me

============================================================================= #}
<a
    id="leadership">
</a>

<section
    class="manager-profile__section">

    <h4
        class="manager-profile__section-title">
        My Leadership Style
    </h4>

    <form
        class="form__wrapper">

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                My Leadership Style and Management Values
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.leadership_style %}active{% endif %}">
                        <label class="form__label" for="managerProfileLeadershipStyleEN">
                            Answer (English)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileLeadershipStyleEN">{{ user.leadership_style }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.leadership_style_fr %}active{% endif %}">
                        <label class="form__label" for="managerProfileLeadershipStyleFR">
                            Answer (Français)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileLeadershipStyleFR">{{ user.leadership_style_fr }}</textarea>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                What I Expect from My Employees
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.expectations %}active{% endif %}">
                        <label class="form__label" for="managerProfileExpectationsEN">
                            Answer (English)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileExpectationsEN">{{ user.expectations }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.expectations_fr %}active{% endif %}">
                        <label class="form__label" for="managerProfileExpectationsFR">
                            Answer (Français)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileExpectationsFR">{{ user.expectations_fr }}</textarea>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                My Approach to Employee Learning and Development
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.approach %}active{% endif %}">
                        <label class="form__label" for="managerProfileApproachEN">
                            Answer (English)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileApproachEN">{{ user.approach }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.approach_fr %}active{% endif %}">
                        <label class="form__label" for="managerProfileApproachFR">
                            Answer (Français)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileApproachFR">{{ user.approach_fr }}</textarea>
                    </div>

                </div>

            </div>

        </fieldset>

        <div
            class="flex-grid">

            <div
                class="box med-1of2">

            </div>

            <div
                class="box med-1of2">
                <button
                    class="button--blue light-bg"
                    type="submit">
                    Save My Leadership Style
                </button>
            </div>

        </div>

    </form>

</section>