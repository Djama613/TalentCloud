{# =============================================================================

    Talent Cloud
    Manager: Profile - About Me

============================================================================= #}
<a
    id="about">
</a>

<section
    class="manager-profile__section">

    <h4
        class="manager-profile__section-title">
        {{ profile.about_me.title}}
    </h4>

    <form
        class="form__wrapper">

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                {{ profile.about_me.name_label}}
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box full">

                    <div class="form__input-wrapper--float active">
                        <label class="form__label" for="managerProfileName">
                            {{ profile.about_me.name_label }}
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileName"
                            type="text"
                            value="{{ user.name }}">
                        </input>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                {{ profile.about_me.position_form_legend }}
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('en').position %}active{% endif %}">
                        <label class="form__label" for="managerProfileTitleEN">
                            {{ profile.about_me.position_label.en }}
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileTitleEN"
                            type="text"
                            value="{{ manager.translate('en').position }}">
                        </input>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('fr').position %}active{% endif %}">
                        <label class="form__label" for="managerProfileTitleFR">
                            {{ profile.about_me.position_label.fr }}
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileTitleFR"
                            type="text"
                            value="{{ manager.translate('fr').position }}">
                        </input>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                {{ profile.about_me.department_form_legend }}
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box full">

                    <div
                        class="form__input-wrapper--select">
                        <label
                            class="form__label"
                            for="managerProfileDepartment">
                            {{ profile.about_me.department_label }}
                        </label>
                        <div
                            class="form__select-wrapper">
                            <select
                                class="form__input"
                                id="managerProfileDepartment">
                                {% for department in departments %}
                                    <option
                                        {% if manager.department.name == deparment.name %}selected="selected"{% endif %}
                                        >{{ department.value }}</option>
                                        }
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('en').branch %}active{% endif %}">
                        <label class="form__label" for="managerProfileBranchEN">
                            {{ profile.about_me.branch_label.en }}
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileBranchEN"
                            type="text"
                            value="{{ manager.translate('en').branch }}">
                        </input>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('fr').branch %}active{% endif %}">
                        <label class="form__label" for="managerProfileBranchFR">
                            {{ profile.about_me.branch_label.fr }}
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileBranchFR"
                            type="text"
                            value="{{ manager.translate('fr').branch }}">
                        </input>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('en').division %}active{% endif %}">
                        <label class="form__label" for="managerProfileDivision">
                            {{ profile.about_me.division_label.en }}
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileDivision"
                            type="text"
                            value="{{ manager.translate('en').division }}">
                        </input>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('fr').division %}active{% endif %}">
                        <label class="form__label" for="managerProfileDivision">
                            {{ profile.about_me.division_label.fr }}
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileDivision"
                            type="text"
                            value="{{ manager.translate('fr').division }}">
                        </input>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                {{ profile.about_me.personal_information_form_legend }}
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('en').education %}active{% endif %}">
                        <label class="form__label" for="managerProfileEducationEN">
                            {{ profile.about_me.education_label.en }}
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileEducationEN"
                            type="text"
                            value="{{ manager.translate('en').education }}">
                        </input>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('fr').education %}active{% endif %}">
                        <label class="form__label" for="managerProfileEducationFR">
                            {{ profile.about_me.education_label.fr }}
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileEducationFR"
                            type="text"
                            value="{{ manager.translate('fr').education }}">
                        </input>
                    </div>

                </div>

                <div
                    class="box full">

                    <div class="form__input-wrapper--float {% if manager.years_experience %}active{% endif %}">
                        <label class="form__label" for="managerProfileExperience">
                            Years of Experience
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileExperience"
                            type="number"
                            value="{{ manager.years_experience }}">
                        </input>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('en').career_journey %}active{% endif %}">
                        <label class="form__label" for="managerProfileCareerJourneyEN">
                            {{ profile.about_me.career_journey_label.en }}
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileCareerJourneyEN">{{ manager.translate('en').career_journey }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('fr').career_journey %}active{% endif %}">
                        <label class="form__label" for="managerProfileCareerJourneyFR">
                            {{ profile.about_me.career_journey_label.fr }}
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileCareerJourneyFR">{{ manager.translate('fr').career_journey }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('en').learning_path %}active{% endif %}">
                        <label class="form__label" for="managerProfileLearningPathEN">
                            {{ profile.about_me.learning_path.en }}
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileLearningPathEN">{{ manager.translate('en').learning_path }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('fr').learning_path %}active{% endif %}">
                        <label class="form__label" for="managerProfileLearningPathFR">
                            {{ profile.about_me.learning_path.fr }}
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileLearningPathFR">{{ manager.translate('fr').learning_path }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('en').about_me %}active{% endif %}">
                        <label class="form__label" for="managerProfileBiographyEN">
                            {{ profile.about_me.biography_label.en }}
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileBiographyEN">{{ manager.translate('en').about_me }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.translate('fr').about_me %}active{% endif %}">
                        <label class="form__label" for="managerProfileBiographyFR">
                            {{ profile.about_me.biography_label.fr }}
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileBiographyFR">{{ manager.translate('fr').about_me }}</textarea>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                {{ profile.about_me.social_media_form_legend }}
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.twitter_username %}active{% endif %}">
                        <label class="form__label" for="managerProfileTwitter">
                            {{ profile.about_me.twitter_label }}
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileTwitter"
                            type="text"
                            value="{{ urls.twitter|replace({':username':manager.twitter_username}) }}">
                        </input>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if manager.linkedin_url %}active{% endif %}">
                        <label class="form__label" for="managerProfileLinkedin">
                            {{ profile.about_me.linkedin_label }}
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileLinkedin"
                            type="text"
                            value="{{ manager.linkedin_url }}">
                        </input>
                    </div>

                </div>

            </div>

        </fieldset>

        <div
            class="flex-grid">

            <div
                class="box med-1of2">

            </div>

            <div
                class="box med-1of2">
                <button
                    class="button--blue light-bg"
                    type="submit">
                    {{ profile_about_me.save_button_label }}
                </button>
            </div>

        </div>

    </form>

</section>
