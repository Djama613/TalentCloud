{# =============================================================================

    Talent Cloud
    Manager: Profile - About Me

============================================================================= #}
<a
    id="culture">
</a>

<section
    class="manager-profile__section">

    <h4
        class="manager-profile__section-title">
        Our Team Culture
    </h4>

    <form
        class="form__wrapper">

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                Primary Information
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of3">

                    <div class="form__input-wrapper--float {% if user.team_size != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileTeamSize">
                            Team Size
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileTeamSize"
                            type="number"
                            value="{{ user.team_size }}">
                        </input>
                    </div>

                </div>

                <div
                    class="box med-2of3">

                    <div class="form__input-wrapper--float {% if user.gc_link != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileGCLink">
                            GC Directory Link
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileGCLink"
                            type="url"
                            value="{{ user.gc_link }}">
                        </input>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                Our Operating Context
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.operating_context != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileOperatingContextEN">
                            Answer (English)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileOperatingContextEN">{{ user.operating_context }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.operating_context_fr != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileOperatingContextFR">
                            Answer (Français)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileOperatingContextFR">{{ user.operating_context_fr }}</textarea>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                What We Value
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.values != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileValuesEN">
                            Answer (English)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileValuesEN">{{ user.values }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.values_fr != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileValuesFR">
                            Answer (Français)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileValuesFR">{{ user.values_fr }}</textarea>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                How We Work
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.how_work != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileHowWorkEN">
                            Answer (English)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileHowWorkEN">{{ user.how_work }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.how_work_fr != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileHowWorkFR">
                            Answer (Français)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileHowWorkFR">{{ user.how_work_fr }}</textarea>
                    </div>

                </div>

            </div>

        </fieldset>

        <div
            class="flex-grid">

            <div
                class="box med-1of2">

            </div>

            <div
                class="box med-1of2">
                <button
                    class="button--blue light-bg"
                    type="submit">
                    Save Our Team Culture
                </button>
            </div>

        </div>

    </form>

</section>