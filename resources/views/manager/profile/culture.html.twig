{# =============================================================================

    Talent Cloud
    Manager: Profile - About Me

============================================================================= #}
<a
    id="culture">
</a>

<section
    class="manager-profile__section">

    <h4
        class="manager-profile__section-title">
        Our Team Culture
    </h4>

    <form
        class="form__wrapper">

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                Primary Information
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of3">

                    <div class="form__input-wrapper--float {% if team_culture.team_size != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileTeamSize">
                            Team Size
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileTeamSize"
                            type="number"
                            value="{{ team_culture.team_size }}">
                        </input>
                    </div>

                </div>

                <div
                    class="box med-2of3">

                    <div class="form__input-wrapper--float {% if team_culture.gc_directory_url != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileGCLink">
                            GC Directory Link
                        </label>
                        <input
                            class="form__input"
                            id="managerProfileGCLink"
                            type="url"
                            value="{{ team_culture.gc_directory_url }}">
                        </input>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                Our Operating Context
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if team_culture.translate('en').operating_context != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileOperatingContextEN">
                            Answer (English)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileOperatingContextEN">{{ team_culture.translate('en').operating_context }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if team_culture.translate('fr').operating_context != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileOperatingContextFR">
                            Answer (Français)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileOperatingContextFR">{{ team_culture.translate('fr').operating_context }}</textarea>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                What We Value
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if team_culture.translate('en').what_we_value != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileValuesEN">
                            Answer (English)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileValuesEN">{{ team_culture.translate('en').what_we_value }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if team_culture.translate('fr').what_we_value != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileValuesFR">
                            Answer (Français)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileValuesFR">{{ team_culture.translate('fr').what_we_value }}</textarea>
                    </div>

                </div>

            </div>

        </fieldset>

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                How We Work
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if team_culture.translate('en').how_we_work != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileHowWorkEN">
                            Answer (English)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileHowWorkEN">{{ team_culture.translate('en').how_we_work }}</textarea>
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if team_culture.translate('fr').how_we_work != null %}active{% endif %}">
                        <label class="form__label" for="managerProfileHowWorkFR">
                            Answer (Français)
                        </label>
                        <textarea
                            class="form__textarea"
                            id="managerProfileHowWorkFR">{{ team_culture.translate('fr').how_we_work }}</textarea>
                    </div>

                </div>

            </div>

        </fieldset>

        <div
            class="flex-grid">

            <div
                class="box med-1of2">

            </div>

            <div
                class="box med-1of2">
                <button
                    class="button--blue light-bg"
                    type="submit">
                    Save Our Team Culture
                </button>
            </div>

        </div>

    </form>

</section>
