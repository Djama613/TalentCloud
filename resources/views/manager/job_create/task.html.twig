{# =============================================================================

    Talent Cloud
    Manager: Create Job Task

============================================================================= #}
<div
    class="manager-jobs__create-task {% if task == false %}template{% endif %}" 
    data-task-id="{% if task == false %}0{% else %}{{ taskCounter }}{% endif %}">

    <fieldset
        class="form__fieldset">

        <legend>

            <div
                class="flex-grid">

                <div
                    class="box small-2of3">
                    Task Information
                </div>

                <div
                    class="box small-1of3">
                    <button
                        class="manager-jobs__delete-task-button">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </div>

            </div>

        </legend>

        <div 
            class="flex-grid">

            <div
                class="box med-1of2">

                <div 
                    class="form__input-wrapper--float {% if task.en != false %}active{% endif %}"
                    data-form-id="task-english">

                    <label 
                        class="form__label"
                        for="">
                        Task Name (English)
                    </label>

                    <input
                        class="form__input"
                        id=""
                        type="text"
                        value="{{ task.en }}">

                </div>

            </div>

            <div
                class="box med-1of2">

                <div 
                    class="form__input-wrapper--float {% if task.fr != false %}active{% endif %}"
                    data-form-id="task-french">

                    <label 
                        class="form__label"
                        for="">
                        Task Name (Fran√ßais)
                    </label>

                    <input
                        class="form__input"
                        id=""
                        type="text"
                        value="{{ task.fr }}">

                </div>

            </div>

        </div>

    </fieldset>

</div>
