                            data-form-id="question-title-english">

                            <label 
                                class="form__label"
                                for="">
                                Question (English)
                            </label>

                            <input
                                class="form__input"
                                id=""
                                type="text"
                                value="">

                        </div>

                    </div>

                    <div class="box full">

                        <div 
                            class="form__input-wrapper--float"
                            data-form-id="question-description-english">

                            <label 
                                class="form__label"
                                for="">
                                Description (English)
                            </label>

                            <textarea
                                class="form__textarea"></textarea>

                        </div>

                    </div>

                </div>

            </div>

            <div
                class="box med-1of2">

                <div
                    class="flex-grid">

                    <div class="box full">

                        <div 
                            class="form__input-wrapper--float"
                            data-form-id="question-title-french">

                            <label 
                                class="form__label"
                                for="">
