{# =============================================================================

    Talent Cloud
    Degree

============================================================================= #}
<div
    class="profile-element accordion degree {% if degree == false %}template active{% endif %}"
    data-item-id="0">

    {# Accordion Trigger #}

        <div
            {% if degree == false %}
                aria-expanded="true"
            {% else %}
                aria-expanded="false"
            {% endif %}
            class="accordion-trigger"
            tabindex="0">

            <span
                class="accordion-title">
                {% if degree == false %}
                    {{ degree_template.new_degree_label }}
                {% else %}
                    {{ degree.type|title }}, {{ degree.area_of_study }}
                {% endif %}
            </span>

            <i class="fas fa-chevron-up"></i>

        </div>

    {# Accordion Content #}

        <div
            {% if degree == false %}
                aria-hidden="false"
            {% else %}
                aria-hidden="true"
            {% endif %}
            class="accordion-content">

            <div
                class="form__wrapper">

                <div
                    class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--select">
                            <label
                                class="form__label"
                                for="degreeType">
                                {{ degree_template.type_label }}
                            </label>
                            <div
                                class="form__select-wrapper fas fa-chevron-down">
                                <select
                                    class="form__input"
                                    id="degreeType"
                                    name="degree_type">
                                    {% for type in degree_template.types|sort %}
                                        <option
                                            {% if degree.type|capitalize == type|capitalize %}selected="selected"{% endif %}
                                            >{{ type }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if degree.area_of_study == true %}active{% endif %}">
                            <label
                                class="form__label"
                                for="degreeArea">
                                {{ degree_template.aoe_label }}
                            </label>
                            <input
                                class="form__input"
                                id="degreeArea"
                                type="text"
                                name="degree_area"
                                value="{{ degree.area_of_study }}" />
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if degree.institution == true %}active{% endif %}">
                            <label
                                class="form__label"
                                for="degreeInstitution">
                                {{ degree_template.institution_label }}
                            </label>
                            <input
                                class="form__input"
                                id="degreeInstitution"
                                type="text"
                                name="degree_institution"
                                value="{{ degree.institution }}" />
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if degree.thesis == true %}active{% endif %}">
                            <label
                                class="form__label"
                                for="degreeThesis">
                                {{ degree_template.thesis_label }}
                            </label>
                            <input
                                class="form__input"
                                id="degreeThesis"
                                type="text"
                                name="degree_thesis"
                                value="{{ degree.thesis }}" />
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--date">

                            <label
                                class="form__label"
                                for="degreeStartDate">
                                {{ degree_template.start_date_label }}
                            </label>

                            <input
                                class="form__input"
                                id="degreeStartDate"
                                type="date"
                                name="degree_start_date"
                                value="{{ degree.start_date }}">

                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--date">

                            <label
                                class="form__label"
                                for="degreeEndDate">
                                {{ degree_template.end_date_label }}
                            </label>

                            <input
                                class="form__input"
                                id="degreeEndDate"
                                type="date"
                                name="degree_end_date"
                                value="{{ degree.end_date }}">

                        </div>

                    </div>

                </div>

            </div>

            <div
                class="accordion-actions flex-grid">

                <div
                    class="box med-1of2">
                    <button
                        class="button--red light-bg modal-trigger"
                        data-modal-id="deleteDegree">
                        {{ degree_template.action_01 }}
                    </button>
                </div>

                <div
                    class="box med-1of2">
                    <button
                        class="button--blue light-bg">
                        {{ degree_template.action_02 }}
                    </button>
                </div>

            </div>

        </div>

</div>
