{# =============================================================================

    Talent Cloud
    Work Sample

============================================================================= #}
<div
    class="profile-element accordion sample {% if sample == false %}template active{% endif %}">

    {# Accordion Trigger #}

        <div
            {% if sample == false %}
                aria-expanded="true"
            {% else %}
                aria-expanded="false"
            {% endif %}
            class="accordion-trigger"
            tabindex="0">

            {% if locale == "profile" %}

            {% else %}

                <div 
                    class="accordion-status">

                    <i class="fas fa-check"></i>

                    <i class="fas fa-exclamation-circle"></i>

                </div>

            {% endif %}

            <span
                class="accordion-title">
                {% if sample == false %}
                    New Work Sample
                {% else %}
                    {{ sample.name }}
                {% endif %}
            </span>

            <i class="fas fa-chevron-up"></i>

        </div>

    {# Accordion Content #}

        <div
            {% if sample == false %}
                aria-hidden="false"
            {% else %}
                aria-hidden="true"
            {% endif %}
            class="accordion-content">

            <div
                class="form__wrapper">
                
                <div
                    class="flex-grid">

                    <div
                        class="box full">

                        <div class="form__input-wrapper--float {% if sample.name == true %}active{% endif %}">
                            <label class="form__label" for="">
                                {{ sample_template.name_label }}
                            </label>
                            <input
                                class="form__input"
                                id=""
                                type="text"
                                value="{{ sample.name }}" />
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div class="form__input-wrapper--select">
                            <label class="form__label" for="">
                                {{ sample_template.type_label }}
                            </label>
                            <div
                                class="form__select-wrapper fas fa-chevron-down">
                                <select
                                    class="form__input">
                                    {% for option in sample_template.types %}
                                        <option
                                            {% if sample.type|capitalize == option|capitalize %}selected="selected"{% endif %}
                                            >{{ option }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div class="form__input-wrapper--float {% if sample.link == true %}active{% endif %}">
                            <label class="form__label" for="">
                                {{ sample_template.link_label }}
                            </label>
                            <input
                                class="form__input"
                                id=""
                                type="url"
                                value="{{ sample.link }}" />
                        </div>

                    </div>

                    <div
                        class="box full">

                        <div class="form__input-wrapper--float {% if sample.description == true %}active{% endif %}">
                            <label class="form__label" for="">
                                {{ sample_template.description_label }}
                            </label>
                            <textarea
                                class="form__textarea">{{ sample.description }}</textarea>
                        </div>

                    </div>

                </div>

                {# Relatives (SKills) #}

                    <div
                        class="profile-relative-list">

                        {# Relative List Title & Creation Trigger #}

                            <div
                                class="profile-relative-list__header flex-grid middle">

                                <div
                                    class="box small-1of2">

                                    <span
                                        class="profile-relative-list__label">
                                        {{ relative_template.skill.title }}
                                    </span>

                                </div>

                                <div
                                    class="box small-1of2">
                                    
                                </div>

                            </div>

                        {# Relative Template #}

                            {% set relativeToken = "skills" %}

                            {% include "common/relatives" %}

                        {# Relative List #}

                            {% set relativeCounter = 0 %}

                            <div 
                                class="profile-relative-list__wrapper">

                                {% for relative in sample.skills %}

                                    {% set relativeCounter = relativeCounter + 1 %}

                                    {% include "common/relatives" %}             

                                {% endfor %}

                            </div>

                        {# Add Relative Trigger #}

                            <div
                                class="profile-relative__add-trigger-wrapper">

                                <button
                                    class="profile-relative__add-trigger">
                                    {{ relative_template.skill.add_label }}
                                </button>

                            </div>

                    </div>

            </div>

            <div
                class="accordion-actions flex-grid">

                <div
                    class="box med-1of2">
                    <button
                        class="button--red light-bg modal-trigger"
                        data-modal-id="deleteSample">
                        {{ sample_template.action_01 }}
                    </button>
                </div>

                <div
                    class="box med-1of2">
                    <button
                        class="button--blue light-bg">
                        {{ sample_template.action_02 }}
                    </button>
                </div>

            </div>

        </div>

</div>
