<div
    class="profile-relative {% if relative == null %}template{% endif %}">

    <div class="form__input-wrapper--select">
        <label 
            class="form__label" 
            for="">
            {{ sample_template.skill_label }}
        </label>
        <div
            class="form__select-wrapper fas fa-chevron-down">
            <select
                class="form__input"
                id="">

                {# Skills #}
                    {% if relativeToken == "skills" %}
                        {% for userSkill in user.skills %}
                            <option
                                {% if relative|capitalize == userSkill|capitalize %}selected="selected"{% endif %}
                                >{{ userSkill }}</option>
                        {% endfor %}
                    {% endif %}

                {# References #}
                    {% if relativeToken == "references" %}
                        {% for userReference in user.references %}
                            <option
                                {% if relative|capitalize == userReference|capitalize %}selected="selected"{% endif %}
                                >{{ userReference }}</option>
                        {% endfor %}
                    {% endif %}

                {# Samples #}
                    {% if relativeToken == "samples" %}
                        {% for userSample in user.samples %}
                            <option
                                {% if relative|capitalize == userSample|capitalize %}selected="selected"{% endif %}
                                >{{ userSample }}</option>
                        {% endfor %}
                    {% endif %}

            </select>
        </div>
    </div>

    <button
        class="profile-relative__remove-trigger">

        <i class="fas fa-times"></i>

    </button>

</div>