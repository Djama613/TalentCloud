<a
    aria-hidden="true"
    class="application__view-anchor"
    id="applicationView01">
</a>

<section
    class="application-preview__section-01">

    <h3>
        Basic Information
    </h3>

    {# Citizenship #}

        {# <div
            class="application-preview__status">
                {% if applicant.application.citizenship != false %}
                    <i class="fas fa-check"></i>
                    <span>{{ applicant.application.citizenship }}</span>
                {% else %}
                    <i class="fas fa-times"></i>
                    <span>{{ application.preview.citizenship_null_copy }}</span>
                {% endif %}
        </div> #}

        <div
            class="application-preview__status">
            {% if job_application.citizenship_declaration_id != false %}
                <i class="fas fa-check"></i>
                <span>
                    {{ citizenship_declaration_template[job_application.citizenship_declaration.name] }}
                </span>
            {% else %}
                <i class="fas fa-times"></i>
                <span>{{ application.preview.citizenship_null_copy }}</span>
            {% endif %}
        </div>

    {# Veteran Status #}

        {# <div
            class="application-preview__status">
            {% if applicant.application.veteran != false %}
                <i class="fas fa-check"></i>
                <span>{{ applicant.application.veteran }}</span>
            {% else %}
                <i class="fas fa-times"></i>
                <span>{{ application.preview.veteran_null_copy }}</span>
            {% endif %}
        </div> #}

        <div
            class="application-preview__status">
            {% if job_application.veteran_status_id != false %}
                <i class="fas fa-check"></i>
                <span>
                        {{ veteran_status_template[job_application.veteran_status.name] }}
                </span>
            {% else %}
                <i class="fas fa-times"></i>
                <span>{{ application.preview.veteran_null_copy }}</span>
            {% endif %}
        </div>

    {# Language Choice #}

        {# <div
            class="application-preview__status">
            {% if applicant.application.language != false %}
                <i class="fas fa-check"></i>
                <span>{{ applicant.application.language }}</span>
            {% else %}
                <i class="fas fa-times"></i>
                <span>{{ application.preview.language_null_copy }}</span>
            {% endif %}
        </div> #}

        <div
            class="application-preview__status">
            {% if job_application.preferred_language_id != false %}
                <i class="fas fa-check"></i>
                <span>
                    {{ preferred_language_template[job_application.preferred_language.name] }}
                </span>
            {% else %}
                <i class="fas fa-times"></i>
                <span>{{ application.preview.language_null_copy }}</span>
            {% endif %}
        </div>

    {# Long Form Questions #}

        {% for question in job.job_poster_questions %}

            <div
                class="application-preview__long-question">

                <span>
                    {{ question.question }}
                </span>

                <p>

                    {% set questionCounter = 0 %}

                    {% for userAnswer in job_application.job_application_answers %}
                        {% if userAnswer.job_poster_question.id == question.id %}
                            {% set questionCounter = questionCounter + 1 %}
                            {{ userAnswer.answer }}
                        {% endif %}
                    {% endfor %}

                    {% if questionCounter == 0 %}
                        {{ application.preview.long_question_null }}
                    {% endif %}

                </p>

            </div>

        {% endfor %}

</section>
