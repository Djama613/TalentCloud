{# =============================================================================

    Talent Cloud
    Reference

============================================================================= #}
<div
    class="profile-element accordion reference {% if reference == false %}template active{% endif %}">

    {# Accordion Trigger #}

        <div
            {% if reference == false %}
                aria-expanded="true"
            {% else %}
                aria-expanded="false"
            {% endif %}
            class="accordion-trigger"
            tabindex="0">

            {% if locale == "profile" %}

            {% else %}

                <div 
                    class="accordion-status">

                    <i class="fas fa-check"></i>

                    <i class="fas fa-exclamation-circle"></i>

                </div>

            {% endif %}

            <span
                class="accordion-title">
                {% if reference == false %}
                    New Reference
                {% else %}
                    {{ reference.name }}
                {% endif %}
            </span>

            <i class="fas fa-chevron-up"></i>

        </div>

    {# Accordion Content #}

        <div
            {% if reference == false %}
                aria-hidden="false"
            {% else %}
                aria-hidden="true"
            {% endif %}
            class="accordion-content">

            <div
                class="form__wrapper">
                
                <div
                    class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div class="form__input-wrapper--float {% if reference.name == true %}active{% endif %}">
                            <label class="form__label" for="">
                                Reference's Name
                            </label>
                            <input
                                class="form__input"
                                id=""
                                type="text"
                                value="{{ reference.name }}" />
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div class="form__input-wrapper--select">
                            <label class="form__label" for="">
                                Your Relationship
                            </label>
                            <div
                                class="form__select-wrapper fas fa-chevron-down">
                                <select
                                    class="form__input">
                                    {% for relationship in reference_template.relationships|sort %}
                                        <option
                                            {% if reference.relationship|capitalize == relationship|capitalize %}selected="selected"{% endif %}
                                            >{{ relationship }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                    </div>

                    <div
                        class="box full">

                        <div class="form__input-wrapper--float {% if reference.email == true %}active{% endif %}">
                            <label class="form__label" for="">
                                Reference's Email
                            </label>
                            <input
                                class="form__input"
                                id=""
                                type="email"
                                value="{{ reference.email }}" />
                        </div>

                    </div>

                    <div
                        class="box full">

                        <div 
                            class="form__input-wrapper--float {% if reference.description != null%}active{% endif %}"
                            data-form-id="experience-description">

                            <label 
                                class="form__label"
                                for="">
                                How You Worked Together
                            </label>

                            <textarea 
                                class="form__textarea" 
                                id="">{{ reference.description }}</textarea>

                        </div>

                    </div>

                </div>

                {# Relatives (Projects) #}

                    <div
                        class="profile-relative-list">

                        {# Relative List Title & Creation Trigger #}

                            <div
                                class="profile-relative-list__header flex-grid middle">

                                <div
                                    class="box small-1of2">

                                    <span
                                        class="profile-relative-list__label">
                                        {{ relative_template.project.title }}
                                    </span>

                                </div>

                                <div
                                    class="box small-1of2">
                                    
                                </div>

                            </div>

                        {# Relative Template #}

                            {% set relativeToken = "projects" %}

                            {% include "common/relatives-projects" %}

                        {# Relative List #}

                            {% set relativeCounter = 0 %}

                            <div 
                                class="profile-relative-list__wrapper">

                                {% for relative in reference.projects %}

                                    {% set relativeCounter = relativeCounter + 1 %}

                                    {% include "common/relatives-projects" %}             

                                {% endfor %}

                            </div>

                        {# Add Relative Trigger #}

                            <div
                                class="profile-relative__add-trigger-wrapper">

                                <button
                                    class="profile-relative__add-trigger">
                                    {{ relative_template.project.add_label }}
                                </button>

                            </div>

                    </div>

                {# Relatives (SKills) #}

                    <div
                        class="profile-relative-list">

                        {# Relative List Title & Creation Trigger #}

                            <div
                                class="profile-relative-list__header flex-grid middle">

                                <div
                                    class="box small-1of2">

                                    <span
                                        class="profile-relative-list__label">
                                        {{ relative_template.skill.title }}
                                    </span>

                                </div>

                                <div
                                    class="box small-1of2">
                                    
                                </div>

                            </div>

                        {# Relative Template #}

                            {% set relativeToken = "skills" %}

                            {% include "common/relatives" %}

                        {# Relative List #}

                            {% set relativeCounter = 0 %}

                            <div 
                                class="profile-relative-list__wrapper">

                                {% for relative in reference.skills %}

                                    {% set relativeCounter = relativeCounter + 1 %}

                                    {% include "common/relatives" %}             

                                {% endfor %}

                            </div>

                        {# Add Relative Trigger #}

                            <div
                                class="profile-relative__add-trigger-wrapper">

                                <button
                                    class="profile-relative__add-trigger">
                                    {{ relative_template.skill.add_label }}
                                </button>

                            </div>

                    </div>

            </div>

            <div
                class="accordion-actions flex-grid">

                <div
                    class="box med-1of2">
                    <button
                        class="button--red light-bg modal-trigger"
                        data-modal-id="deletereference">
                        {{ reference_template.action_01 }}
                    </button>
                </div>

                <div
                    class="box med-1of2">
                    <button
                        class="button--blue light-bg">
                        {{ reference_template.action_02 }}
                    </button>
                </div>

            </div>

        </div>

</div>
