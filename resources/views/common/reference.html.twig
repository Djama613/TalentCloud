{# =============================================================================

    Talent Cloud
    Reference

============================================================================= #}
{% if prefix %}
    {% set name_suffix = prefix + "[references][:template][:id]"|replace({":id":reference.id}) %}
    {% set id_suffix = name_suffix %}
{% else %}
    {% set name_suffix = "references[:template][:id]"|replace({":id":reference.id}) %}
    {% set id_suffix = name_suffix %}
{% endif %}

{% if reference %}
    {% set name_suffix = name_suffix|replace({":template":"old", ":id":reference.id}) %}
    {% set id_suffix = id_suffix|replace({":template":"old", ":id":reference.id}) %}
{% endif %}

<div
    class="profile-element accordion reference {% if reference == false %}template active{% endif %} modal-target-object"
    data-item-id="{{ reference ? reference.id : 0 }}">

    {# Accordion Trigger #}

        <div
            {% if reference == false %}
                aria-expanded="true"
            {% else %}
                aria-expanded="false"
            {% endif %}
            class="accordion-trigger"
            tabindex="0">

            {% if locale == "profile" %}

            {% else %}

                <div
                    class="accordion-status">

                    <i class="fas fa-check"></i>

                    <i class="fas fa-exclamation-circle"></i>

                </div>

            {% endif %}

            <span
                class="accordion-title">
                {% if reference == false %}
                    {{ reference_template.new_reference_title }}
                {% else %}
                    {{ reference.name }}
                {% endif %}
            </span>

            <i class="fas fa-chevron-up"></i>

        </div>

    {# Accordion Content #}

        <div
            {% if reference == false %}
                aria-hidden="false"
            {% else %}
                aria-hidden="true"
            {% endif %}
            class="accordion-content">

            <div
                class="form__wrapper">

                <div
                    class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div class="form__input-wrapper--float {% if reference.name == true %}active{% endif %}">
                            <label class="form__label" for="{{ id_suffix }}referenceName">
                                {{ reference_template.name_label }}
                            </label>
                            <input
                                class="form__input"
                                id="{{ id_suffix }}referenceName"
                                type="text"
                                name="{{ name_suffix }}[name]"
                                value="{{ reference.name }}" />
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div class="form__input-wrapper--select">
                            <label class="form__label" for="{{ id_suffix }}referenceRelationship">
                                {{ reference_template.relationship_label }}
                            </label>
                            <div
                                class="form__select-wrapper fas fa-chevron-down">
                                <select
                                    id="{{ id_suffix }}referenceRelationship"
                                    class="form__input"
                                    name="{{ name_suffix }}[relationship]">
                                    {% for relationship in relationships %}
                                        <option
                                            value="{{ relationship.id }}"
                                            {% if reference.relationship_id == relationship.id %}selected="selected"{% endif %}
                                            >{{ reference_template.relationships[relationship.name] }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                    </div>

                    <div
                        class="box full">

                        <div class="form__input-wrapper--float {% if reference.email == true %}active{% endif %}">
                            <label class="form__label" for="{{ id_suffix }}referenceEmail">
                                {{ reference_template.email_label }}
                            </label>
                            <input
                                class="form__input"
                                id="{{ id_suffix }}referenceEmail"
                                type="email"
                                name="{{ name_suffix }}[email]"
                                value="{{ reference.email }}" />
                        </div>

                    </div>

                    <div
                        class="box full">

                        <div
                            class="form__input-wrapper--float {% if reference.description != null%}active{% endif %}"
                            data-form-id="experience-description">

                            <label
                                class="form__label"
                                for="{{ id_suffix }}referenceDescription">
                                {{ reference_template.description_label }}
                            </label>

                            <textarea
                                class="form__textarea"
                                id="{{ id_suffix }}referenceDescription"
                                name="{{ name_suffix }}[description]"
                                >{{ reference.description }}</textarea>

                        </div>

                    </div>

                </div>

                {# Relatives (Projects) #}

                    <div
                        class="profile-relative-list">

                        {# Relative List Title & Creation Trigger #}

                            <div
                                class="profile-relative-list__header flex-grid middle">

                                <div
                                    class="box small-1of2">

                                    <span
                                        class="profile-relative-list__label">
                                        {{ relative_template.project.title }}
                                    </span>

                                </div>

                                <div
                                    class="box small-1of2">

                                </div>

                            </div>

                        {# Relative Template #}

                            {% set relativeToken = "projects" %}

                            {% include "common/relatives-projects" with {"prefix":name_suffix} %}

                        {# Relative List #}

                            {% set relativeCounter = 0 %}

                            <div
                                class="profile-relative-list__wrapper">

                                {% for relative in reference.projects %}

                                    {% set relativeCounter = relativeCounter + 1 %}

                                    {% include "common/relatives-projects" with {"prefix":name_suffix} %}

                                {% endfor %}

                            </div>

                        {# Add Relative Trigger #}

                            <div
                                class="profile-relative__add-trigger-wrapper">

                                <button
                                    class="profile-relative__add-trigger">
                                    {{ relative_template.project.add_label }}
                                </button>

                            </div>

                    </div>

                {# Relatives (SKills) #}

                    <div
                        class="profile-relative-list">

                        {# Relative List Title & Creation Trigger #}

                            <div
                                class="profile-relative-list__header flex-grid middle">

                                <div
                                    class="box small-1of2">

                                    <span
                                        class="profile-relative-list__label">
                                        {{ relative_template.skill.title }}
                                    </span>

                                </div>

                                <div
                                    class="box small-1of2">

                                </div>

                            </div>

                        {# Relative Template #}

                            {% set relativeToken = "skills" %}

                            {% include "common/relatives" with {"prefix":name_suffix} %}

                        {# Relative List #}

                            {% set relativeCounter = 0 %}

                            <div
                                class="profile-relative-list__wrapper">

                                {% for relative in reference.skills %}

                                    {% set relativeCounter = relativeCounter + 1 %}

                                    {% include "common/relatives" with {"prefix":name_suffix} %}

                                {% endfor %}

                            </div>

                        {# Add Relative Trigger #}

                            <div
                                class="profile-relative__add-trigger-wrapper">

                                <button
                                    class="profile-relative__add-trigger">
                                    {{ relative_template.skill.add_label }}
                                </button>

                            </div>

                    </div>

            </div>

            <div
                class="accordion-actions flex-grid">

                <div
                    class="box med-1of2">
                    <button
                        class="button--red light-bg modal-trigger"
                        data-modal-id="deleteReference"
                        type="button">
                        {{ reference_template.action_01 }}
                    </button>
                </div>

                <div
                    class="box med-1of2">
                    <button
                        class="button--blue light-bg"
                        type="submit"
                        name="submit"
                        value="{{ name_suffix }}">
                        {{ reference_template.action_02 }}
                    </button>
                </div>

            </div>

        </div>

</div>
