{# =============================================================================

    Talent Cloud
    Applicant: Profile - References Index

============================================================================= #}
<section
    class="applicant-profile__portfolio">

    <div
        class="container--layout">

        {# Profile List #}

        <div
            class="profile-list">

            {# Profile List Header #}

                <div
                    class="profile-list__header flex-grid middle">

                    <div
                        class="box med-1of2">

                        <h3>My References</h3>

                    </div>

                    <div
                        class="box med-1of2">

                        <button
                            class="profile-list__add-element-trigger">
                            Add a Reference
                        </button>

                    </div>

                </div>

            {# Set Locale #}

                {% set locale = "profile" %}

            {# Profile Element Template (Sample) #}

                {% include "common/reference" %}

            {# Profile Element List #}

                <div 
                    class="profile-element-list">

                    <div
                        class="profile-null {% if user.references == false %}active{% endif %}">

                        <p>You don't currently have any references in your portfolio! Use the button above to add a reference.</p>

                    </div>

                    {% for reference in user.references %}

                        {% include "common/reference" %}

                    {% endfor %}

                </div>

        </div>

    </div>

</section>
