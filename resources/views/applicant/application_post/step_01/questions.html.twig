{# =============================================================================

    Talent Cloud
    Applicant: Application Post - Questions

============================================================================= #}
<div
    class="application-post__questions">

    <div
        class="container--copy">

        {% for question in applicant_profile_questions %}

            <span>
                {{ question.value }}
            </span>

            <p>
                {{ question.description }}
            </p>

            <div class="form__input-wrapper--float {% if question.answer %}active{% endif %}">
                <label class="form__label" for="{{ question.input_name }}">
                    {{ question.answer_label }}
                </label>
                <textarea
                    class="form__textarea"
                    name="{{ question.input_name }}">{% if question.answer != null %}{{ question.answer }}{% endif %}</textarea>
            </div>

        {% endfor %}

        <button
            class="button--blue light-bg">
            {{ SAVE AND CONTINUE }}
        </button>

    </div>

</div>
